{
  "version": "1.0.0",
  "description": "Consistent API specification for geometry kernel across Python, Rust, and C++",
  "types": {
    "Point": {
      "description": "3D point with x, y, z coordinates",
      "properties": {
        "x": {"type": "number", "description": "X coordinate"},
        "y": {"type": "number", "description": "Y coordinate"},
        "z": {"type": "number", "description": "Z coordinate"}
      },
      "methods": {
        "new": {
          "description": "Create new point",
          "parameters": ["x: number", "y: number", "z: number"],
          "returns": "Point"
        },
        "origin": {
          "description": "Create point at origin (0,0,0)",
          "parameters": [],
          "returns": "Point"
        },
        "distance_to": {
          "description": "Calculate distance to another point",
          "parameters": ["other: Point"],
          "returns": "number"
        },
        "distance_to_origin": {
          "description": "Calculate distance to origin",
          "parameters": [],
          "returns": "number"
        },
        "midpoint": {
          "description": "Calculate midpoint between this and another point",
          "parameters": ["other: Point"],
          "returns": "Point"
        },
        "translate": {
          "description": "Translate point by vector",
          "parameters": ["vector: Vector"],
          "returns": "Point"
        },
        "to_json": {
          "description": "Serialize to JSON",
          "parameters": [],
          "returns": "string"
        },
        "from_json": {
          "description": "Deserialize from JSON",
          "parameters": ["json_str: string"],
          "returns": "Point"
        }
      }
    },
    "Vector": {
      "description": "3D vector with x, y, z components",
      "properties": {
        "x": {"type": "number", "description": "X component"},
        "y": {"type": "number", "description": "Y component"},
        "z": {"type": "number", "description": "Z component"}
      },
      "methods": {
        "new": {
          "description": "Create new vector",
          "parameters": ["x: number", "y: number", "z: number"],
          "returns": "Vector"
        },
        "zero": {
          "description": "Create zero vector",
          "parameters": [],
          "returns": "Vector"
        },
        "magnitude": {
          "description": "Calculate vector magnitude",
          "parameters": [],
          "returns": "number"
        },
        "normalize": {
          "description": "Get normalized vector",
          "parameters": [],
          "returns": "Vector"
        },
        "dot": {
          "description": "Dot product with another vector",
          "parameters": ["other: Vector"],
          "returns": "number"
        },
        "cross": {
          "description": "Cross product with another vector",
          "parameters": ["other: Vector"],
          "returns": "Vector"
        },
        "add": {
          "description": "Add another vector",
          "parameters": ["other: Vector"],
          "returns": "Vector"
        },
        "subtract": {
          "description": "Subtract another vector",
          "parameters": ["other: Vector"],
          "returns": "Vector"
        },
        "scale": {
          "description": "Scale vector by scalar",
          "parameters": ["scalar: number"],
          "returns": "Vector"
        },
        "to_json": {
          "description": "Serialize to JSON",
          "parameters": [],
          "returns": "string"
        },
        "from_json": {
          "description": "Deserialize from JSON",
          "parameters": ["json_str: string"],
          "returns": "Vector"
        }
      }
    },
    "Line": {
      "description": "3D line segment defined by start and end points",
      "properties": {
        "start": {"type": "Point", "description": "Start point"},
        "end": {"type": "Point", "description": "End point"}
      },
      "methods": {
        "new": {
          "description": "Create new line",
          "parameters": ["start: Point", "end: Point"],
          "returns": "Line"
        },
        "length": {
          "description": "Calculate line length",
          "parameters": [],
          "returns": "number"
        },
        "midpoint": {
          "description": "Get midpoint of line",
          "parameters": [],
          "returns": "Point"
        },
        "direction": {
          "description": "Get direction vector",
          "parameters": [],
          "returns": "Vector"
        },
        "point_at": {
          "description": "Get point at parameter t (0=start, 1=end)",
          "parameters": ["t: number"],
          "returns": "Point"
        },
        "to_json": {
          "description": "Serialize to JSON",
          "parameters": [],
          "returns": "string"
        },
        "from_json": {
          "description": "Deserialize from JSON",
          "parameters": ["json_str: string"],
          "returns": "Line"
        }
      }
    }
  }
}
